<% include ../partials/header.ejs %>

<h1>GAMES INDEX</h1>

<% games.forEach(game=> { %>
  <div>
    <a href="/games/<%= game.id %>/edit">edit</a>
    <form method="POST" action="/games/<%= game.id %>?_method=DELETE">
      <input type="submit" value="Delete">
    </form>
    <a href="/games/<%=game.id %>"><%= game.name %></a>
  </div>
<% }) %>

